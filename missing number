https://www.geeksforgeeks.org/problems/missing-number-in-array1416/1?page=1&difficulty=Easy&sortBy=submissions

class Solution {
  public:
    int missingNum(vector<int>& arr) {
        int n = arr.size() + 1;         // total numbers should be from 1 to n
        long long total = 1LL *n * (n + 1) / 2;    // sum of 1 to n

        long long sum = 0;
        for (int i=0;i<n-1;i++){
            sum += arr[i];

        }return total - sum;             // missing number
    }
};

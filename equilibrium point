class Solution {
  public:
    // Function to find equilibrium point in the array.
    int findEquilibrium(vector<int> &arr) {
        // code here
        int n = arr.size();
        int val =0;
        long long totalSum =0;
        for(int i=0;i<n;i++){
            totalSum += arr[i];
        }
        long long leftSum =0;
        for(int i=0;i<n;i++){
            long long rightSum = totalSum - leftSum - arr[i];
        if(leftSum == rightSum){
            return i;
        }
            leftSum += arr[i];
        }
        return -1;
    }
};
